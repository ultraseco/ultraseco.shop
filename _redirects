# Redirecciones
/  /empresa/index.html  200

# Forzar HTTPS
http://ultraseco.shop/*  https://www.ultraseco.shop/:splat  301!
http://www.ultraseco.shop/*  https://www.ultraseco.shop/:splat  301!

# Redirecciones de páginas antiguas o errores
/404  /empresa/index.html  404
/error  /empresa/index.html  500

# Headers de seguridad
/*
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: geolocation=(), microphone=(), camera=()

# Cache control para assets estáticos
/empresa/images/*
  Cache-Control: public, max-age=31536000, immutable

/empresa/assets/*
  Cache-Control: public, max-age=31536000, immutable

/empresa/*.css
  Cache-Control: public, max-age=2592000

/empresa/*.js
  Cache-Control: public, max-age=2592000

# HTML sin cache agresivo
/empresa/*.html
  Cache-Control: public, max-age=86400
