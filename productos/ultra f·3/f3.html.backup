        <script>
            // --- DATA ---
            const COMPARATIVE_DATA = {
                labels: ['Velocidad Extinción', 'Resistencia Burnback', 'Seguridad Ambiental', 'Facilidad Limpieza', 'Estabilidad Térmica'],
                datasets: [{
                    label: 'ULTRA-F3 (Sílice)',
                    data: [4.5, 5, 5, 5, 5],
                    backgroundColor: 'rgba(37, 99, 235, 0.2)', borderColor: 'rgb(37, 99, 235)', pointBackgroundColor: 'rgb(37, 99, 235)',
                }, {
                    label: 'AFFF Importado',
                    data: [5, 2, 1, 1, 3],
                    backgroundColor: 'rgba(239, 68, 68, 0.2)', borderColor: 'rgb(239, 68, 68)', pointBackgroundColor: 'rgb(239, 68, 68)',
                }, {
                    label: 'Proteínica',
                    data: [2, 4, 3, 2, 1], // Scores basados en el informe original
                    backgroundColor: 'rgba(234, 179, 8, 0.2)', borderColor: 'rgb(234, 179, 8)', pointBackgroundColor: 'rgb(234, 179, 8)',
                }]
            };

            const BURNBACK_DATA = {
                labels: ['AFFF (Fluorada)', 'Proteínica', 'ULTRA-F3 (Sílice)'],
                data: [5, 8, 15],
                colors: ['rgba(239, 68, 68, 0.7)', 'rgba(234, 179, 8, 0.7)', 'rgba(37, 99, 235, 0.9)']
            };

            // --- CHART JS LOGIC ---
            document.addEventListener('DOMContentLoaded', function () {
                // 1. Radar Chart (3 VÍAS)
                const ctxRadar = document.getElementById('radarChart').getContext('2d');
                new Chart(ctxRadar, {
                    type: 'radar',
                    data: COMPARATIVE_DATA,
                    options: {
                        responsive: true, maintainAspectRatio: false,
                        scales: {
                            r: {
                                min: 0, max: 5, ticks: { stepSize: 1, display: false },
                                pointLabels: { font: { size: 11, family: 'Inter' } }
                            }
                        },
                        plugins: { legend: { position: 'bottom' } }
                    }
                });

                // 2. Bar Chart (3 VÍAS)
                const ctxBar = document.getElementById('barChart').getContext('2d');
                new Chart(ctxBar, {
                    type: 'bar',
                    data: {
                        labels: BURNBACK_DATA.labels,
                        datasets: [{
                            label: 'Minutos de Resistencia al Fuego (Burnback)',
                            data: BURNBACK_DATA.data,
                            backgroundColor: BURNBACK_DATA.colors,
                            borderColor: BURNBACK_DATA.colors.map(c => c.replace('0.7', '1').replace('0.9', '1')),
                            borderWidth: 1
                        }]
                    },
                    options: {
                        responsive: true, maintainAspectRatio: false,
                        scales: {
                            y: { beginAtZero: true, title: { display: true, text: 'Minutos' } }
                        },
                        plugins: { legend: { display: false } }
                    }
                });

                // Inicializar la calculadora ROI
                calculateROI();
            });

            // --- ROI CALCULATOR LOGIC ---
            function calculateROI() {
                const pails = parseFloat(document.getElementById('pailInput').value) || 0;
                const ultraPrice = 160;
                const afffPrice = 180;
                const remediationCost = 200;

                const totalCompetitor = pails * (afffPrice + remediationCost);
                const totalUltra = pails * ultraPrice;
                const savings = totalCompetitor - totalUltra;

                document.getElementById('competitorCost').innerText = `$${totalCompetitor.toLocaleString()}`;
                document.getElementById('ultraCost').innerText = `$${totalUltra.toLocaleString()}`;
                document.getElementById('totalSavings').innerText = `$${savings.toLocaleString()}`;
            }

            // --- MODAL LOGIC ---
            function openModal() {
                document.getElementById('contact-modal').style.display = 'flex';
            }
            function closeModal() {
                document.getElementById('contact-modal').style.display = 'none';
            }

            // --- GEMINI AI LOGIC ---
            const apiKey = "";
            const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-09-2025:generateContent?key=${apiKey}`;

            // System Context for Report Generation (High-Level Consultant)
            const systemContextReportBase = `
            Eres un Consultor Estratégico de alto nivel. Genera un informe persuasivo de tres párrafos (introducción, ventajas clave, conclusión de llamada a la acción) explicando por qué el cliente ({{CLIENT_PROFILE}}) debe sustituir inmediatamente su actual espuma (AFFF/Proteínica) por ULTRA-F3.
            
            Enfócate en tres puntos de valor: 1. Seguridad Técnica Insuperable (Escudo Cerámico), 2. Eliminación de Riesgo Legal/Ambiental (PFAS/Putrefacción), 3. Ventaja Logística y Precio Competitivo Nacional. Adapta el tono y los argumentos al perfil específico.
        `;

            async function generateStrategicReport() {
                const outputDiv = document.getElementById('ai-report-output');
                const statusDiv = document.getElementById('report-status');
                const clientProfile = document.getElementById('client-profile').value;

                console.log("DEBUG: Iniciando generación de reporte IA."); // **DEBUG CONSOLE LOG**

                statusDiv.classList.remove('hidden');
                outputDiv.innerHTML = `<p>Generando informe...</p>`;

                const userQuery = `Generar informe resumen de ventajas para un ${clientProfile}`;
                const tailoredContext = systemContextReportBase.replace('{{CLIENT_PROFILE}}', clientProfile);

                const payload = {
                    contents: [{ parts: [{ text: tailoredContext + "\n\nInstrucción: " + userQuery }] }]
                };

                try {
                    statusDiv.innerHTML = `<i class="fas fa-spinner fa-spin mr-2"></i> Generando informe estratégico para ${clientProfile}...`;
                    console.log("DEBUG: Payload enviado para perfil:", clientProfile); // **DEBUG CONSOLE LOG**

                    const response = await fetch(apiUrl, { method: 'POST', headers: { 'Content-Type': 'application/json' }, body: JSON.stringify(payload) });

                    if (response.status === 429) {
                        throw new Error("API rate limit exceeded (429).");
                    }
                    if (!response.ok) {
                        throw new Error(`API returned status ${response.status}.`);
                    }

                    const result = await response.json();
                    const text = result.candidates?.[0]?.content?.parts?.[0]?.text;

                    if (text) {
                        const formattedResponse = text.replace(/\n\n/g, '</p><p>').replace(/\n/g, '<br>');

                        outputDiv.innerHTML = `<p class="font-bold text-blue-700 mb-2">Informe Estratégico Detallado para ${clientProfile}:</p><p class="text-slate-700">${formattedResponse}</p>`;
                        outputDiv.classList.remove('ai-report-box');
                        outputDiv.classList.add('bg-white', 'p-6', 'rounded-xl', 'shadow-md', 'border', 'border-green-200');

                    } else {
                        outputDiv.innerHTML = `<p class="text-red-600">Error: Respuesta de la IA vacía o incompleta.</p>`;
                        outputDiv.classList.add('ai-report-box', 'bg-white', 'p-6', 'rounded-xl', 'shadow-md', 'border', 'border-red-200');
                    }

                } catch (error) {
                    console.error("DEBUG CRÍTICO: Error en generateStrategicReport:", error); // **DEBUG CONSOLE LOG**
                    outputDiv.innerHTML = `<p class="text-red-600">Error Crítico: No se pudo generar el informe. Detalle: ${error.message}</p>`;
                    outputDiv.classList.add('ai-report-box', 'bg-white', 'p-6', 'rounded-xl', 'shadow-md', 'border', 'border-red-200');
                } finally {
                    statusDiv.classList.add('hidden');
                }
            }

            // --- CHAT LÓGICA (Funciones de utilidad, ya no es el foco) ---
            const chatBox = document.getElementById('chat-box');
            const userInput = document.getElementById('user-input');

            // Funciones de chat simplificadas (manteniendo la compatibilidad del código)
            function appendMessage(text, sender) {
                const div = document.createElement('div');
                div.classList.add('chat-bubble', sender === 'user' ? 'chat-user' : 'chat-bot');
                div.innerHTML = text;
                chatBox.appendChild(div);
                chatBox.scrollTop = chatBox.scrollHeight;
            }

            async function sendMessage() {
                const text = userInput.value.trim();
                if (!text) return;

                // Chat normal (Ingeniero Técnico)
                appendMessage(text, 'user');
                userInput.value = '';

                const loadingDiv = document.createElement('div');
                loadingDiv.classList.add('typing-indicator', 'chat-bubble', 'chat-bot');
                loadingDiv.innerHTML = `<span></span><span></span><span></span> Analizando consulta...`;
                chatBox.appendChild(loadingDiv);
                chatBox.scrollTop = chatBox.scrollHeight;

                const response = await fetchGeminiResponse(text, systemContextChat);

                chatBox.removeChild(loadingDiv);

                const formattedResponse = response.replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>');
                appendMessage(formattedResponse, 'bot');
            }

            function sendPredefinedMessage(text) { userInput.value = text; sendMessage(); }
            function handleKeyPress(e) { if (e.key === 'Enter') sendMessage(); }

            // Inicializar
            document.addEventListener('DOMContentLoaded', () => {
                document.getElementById('ai-report-output').classList.add('ai-report-box');
            });
        </script>
</body>

